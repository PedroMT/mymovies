<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_toEndOf="@id/movie_poster"
        android:layout_alignBottom="@id/movie_poster"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:alpha="0.7"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Star Wars asf asdfasdfdasf asdfasfasf asdfasdfasd asdfaf asdfasdfdsf asdfdasfasdf asfadsf asdfasdfaf asdfasd fasd fasd safasdf fsdaf fas asddafsfd dsf"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="5"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>